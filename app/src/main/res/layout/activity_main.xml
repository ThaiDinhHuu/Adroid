<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/rssUrlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter RSS URL"
        android:layout_marginBottom="16dp"
        android:inputType="text"
        android:imeOptions="actionDone"/>

    <Button
        android:id="@+id/loadRssButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load RSS"
        android:layout_below="@id/rssUrlEditText"
        android:onClick="loadRss"/>

    <ListView
        android:id="@+id/rssListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/loadRssButton"
        android:textStyle="bold"/>

</RelativeLayout>